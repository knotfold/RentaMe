<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".Busqueda">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busqueda"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"

        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de habitaciones"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ejemplo:2"
        android:id="@+id/textNoHabitaciones"
        android:textColorHint="@color/colorPrimaryHint"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de baÃ±os"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ejemplo:2"
        android:id="@+id/textNoBanos"
        android:textColorHint="@color/colorPrimaryHint"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capcidad de personas"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="26sp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ejemplo:4"
        android:id="@+id/textNoPersonas"
        android:textColorHint="@color/colorPrimaryHint"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimary"
        android:text="Buscar"
        android:id="@+id/buttonSearch"
        android:drawableLeft="@drawable/ic_search_gray_35dp"
        android:paddingHorizontal="60dp"
        android:textSize="18sp"/>

</LinearLayout>
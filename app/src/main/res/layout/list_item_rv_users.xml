<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="1dp"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayoutAllUsers"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_gray_35dp"
            android:id="@+id/textNombreUser"
            android:text="Nombre Usuario"
            android:layout_marginLeft="15dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido paterno"
                android:id="@+id/textAPaterno"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido Materno"
                android:id="@+id/textAMaterno"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textMail"
            android:text="Knotfold@hotmail.com"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/textViewIdUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="1sp"/>



    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>